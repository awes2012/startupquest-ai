{
  "name": "startupquest-ai",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm --filter web dev",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "dev:infra": "docker compose -f infra/docker/docker-compose.yml up -d",
    "stop:infra": "docker compose -f infra/docker/docker-compose.yml down -v"
  }
}
